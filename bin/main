#!/usr/bin/env ruby

# rubocop:disable Style/StringLiterals

class Tictactoe
  attr_reader :grid
  def initialize
    @grid = [1, 2, 3, 4, 5, 6, 7, 8, 9]
  end

  def show_grid
    @grid.each_with_index do |item, index|
      if ((index + 1) % 3).zero?
        puts "#{item} |"
        puts '============='
      else
        print " #{item} |"
      end
    end
  end
end

# rubocop:enable Style/StringLiterals
